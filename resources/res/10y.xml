<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="44dp" android:textDirection="ltr" android:layoutDirection="ltr">
    <com.szchoiceway.customerui.views.SbarImageButton android:id="@+id/btnHome" android:background="@drawable/landrover_btn_top_home" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="34dp"/>
    <com.szchoiceway.customerui.views.ClockTextView android:textSize="24sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/txtClock" android:layout_width="wrap_content" android:layout_height="44dp" android:text="00:00" android:layout_centerHorizontal="true" app:amPmStyle="2"/>
    <ImageView android:id="@+id/iconCharge" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:src="@drawable/landrover_main_top_icon_fastcharge" android:layout_alignParentBottom="true" android:layout_marginEnd="17dp" android:layout_toStartOf="@+id/iconUSB"/>
    <ImageView android:id="@+id/iconUSB" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:src="@drawable/landrover_main_top_icon_usb" android:layout_alignParentBottom="true" android:layout_marginEnd="17dp" android:layout_toStartOf="@+id/chkBT"/>
    <ImageView android:id="@+id/chkBT" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/landrover_main_top_icon_bt_f" android:layout_centerVertical="true" android:layout_marginEnd="13dp" android:layout_toStartOf="@+id/signalLayout"/>
    <RelativeLayout android:id="@+id/signalLayout" android:layout_width="wrap_content" android:layout_height="44dp" android:layout_marginEnd="11dp" android:layout_toStartOf="@+id/levelWifi">
        <ImageView android:id="@+id/signalView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:src="@drawable/landrover_4g_signal_view" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/signalText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="4G" android:layout_marginStart="3dp" android:layout_toEndOf="@+id/signalView"/>
    </RelativeLayout>
    <ImageView android:id="@+id/levelWifi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:src="@drawable/landrover_level_wifi_signal" android:layout_alignParentBottom="true" android:layout_marginEnd="14dp" android:layout_toStartOf="@+id/iconSD"/>
    <ImageView android:id="@+id/iconSD" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:src="@drawable/landrover_main_top_icon_sd" android:layout_alignParentBottom="true" android:layout_marginEnd="15dp" android:layout_toStartOf="@+id/imageHD"/>
    <ImageView android:id="@+id/imageHD" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:src="@drawable/landrover_main_top_icon_hd" android:layout_alignParentBottom="true" android:layout_marginEnd="14dp" android:layout_toStartOf="@+id/btnScreen"/>
    <com.szchoiceway.customerui.views.SbarImageButton android:id="@+id/btnScreen" android:background="@drawable/landrover_btn_top_screen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toStartOf="@+id/btnTask2"/>
    <com.szchoiceway.customerui.views.SbarImageButton android:id="@+id/btnTask2" android:background="@drawable/landrover_btn_top_task" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toStartOf="@+id/btnExit"/>
    <com.szchoiceway.customerui.views.SbarImageButton android:id="@+id/btnTask" android:background="@drawable/landrover_btn_top_task" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toStartOf="@+id/btnExit"/>
    <com.szchoiceway.customerui.views.SbarImageButton android:id="@+id/btnExit" android:background="@drawable/landrover_btn_top_return" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="19dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
